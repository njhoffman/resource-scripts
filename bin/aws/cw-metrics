#!/bin/bash

# Metrics
## Metric Name -
## Metric Namespace --
### Dimensions
#### Name
#### Value
# Metrics
aws cloudwatch list-metrics --query 'Metrics[].{ "  Namespace": Namespace, " Metric": MetricName, "Name": Dimensions[0].Name, "Value": Dimensions[0].Value }' --output text | sort | column -t
aws cloudwatch list-metrics --query 'Metrics[].{ "  Namespace": Namespace, " Metric": MetricName, "Name": Dimensions[1].Name, "Value": Dimensions[1].Value }' --output text | sort | column -t | grep -v None
aws cloudwatch list-metrics --query 'Metrics[].{ "  Namespace": Namespace, " Metric": MetricName, "Name": Dimensions[2].Name, "Value": Dimensions[2].Value }' --output text | sort | column -t | grep -v None

# list metrics
aws cloudwatch list-metrics --query 'Metrics[].{ "  Namespace": Namespace, " Metric": MetricName }' --output text | sort | uniq | column -t

# list by metric
aws cloudwatch list-metrics --metric-name RequestCount --query 'Metrics[].{ "  Namespace": Namespace, " Name 1": Dimensions[0].Name, " Value 1": Dimensions[0].Value, "Name 2": Dimensions[1].Name, "Value 2": Dimensions[1].Value }' --output text | sort | column -t
